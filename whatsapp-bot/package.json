{
  "name": "whatsapp-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "Bot de WhatsApp local via Baileys + Express com integração HTTP.",
  "main": "index.js",
  "scripts": {
    "dev": "node --watch index.js",
    "start": "node --max-old-space-size=4096 --expose-gc index.js",
    "start:watch": "node --max-old-space-size=4096 --expose-gc --watch index.js",
    "start:gc": "node --max-old-space-size=4096 --expose-gc index.js",
    "start:8gb": "node --max-old-space-size=8192 --expose-gc index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "6.6.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.0",
    "pino": "^9.3.2",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0"
  }
}